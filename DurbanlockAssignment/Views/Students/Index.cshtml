@model IEnumerable<DurbanlockAssignment.Models.Item>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<form class="navbar-form navbar-right" action="/Students\search">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Search Student" name="search">
    </div>
    <b>@Html.RadioButton("SearchBy", "StudentNo") <text>StudentNo</text></b>
    <b>@Html.RadioButton("SearchBy", "First") <text>First Name</text></b>
    <b>@Html.RadioButton("SearchBy", "Last") <text>Last Name</text></b>
    <b>@Html.RadioButton("SearchBy", "Email") <text>Email</text></b>
    <div>

    <button type="submit" class="btn btn-default">Submit</button>
     </div>
</form>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.isActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@item.StudentImage">
                <img src="@item.StudentImage" alt="images" width="140" height="140" />
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.isActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            @Html.ActionLink("Email", "Email", new { id = item.Id })
        </td>
    </tr>
}

</table>
